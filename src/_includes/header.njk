<!-- Header -->
<header class="header{% if headerLight %} light{% endif %}" id="header">
  <div class="container">
    <div class="header-inner">
      <a href="/" class="logo">
        <!-- Logo Branco (visível antes do scroll) -->
        <img class="logo-white" src="{{ site.logos.white }}" alt="{{ site.title }}" width="62" height="50">
        <!-- Logo Gradiente (visível após scroll) -->
        <img class="logo-gradient" src="{{ site.logos.main }}" alt="{{ site.title }}" width="62" height="50">
      </a>

      <nav class="nav">
        <ul class="nav-list">
          <li class="nav-item">
            <a href="/" class="nav-link">Início</a>
          </li>
          <li class="nav-item">
            <a href="#" class="nav-link has-dropdown">
              Soluções
              <svg width="12" height="12" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <polyline points="6 9 12 15 18 9"></polyline>
              </svg>
            </a>
            <div class="nav-dropdown">
              {% for service in services %}
              <a href="/{{ service.link }}" class="nav-dropdown-item">
                <div class="nav-dropdown-icon">
                  {% include "icons/" + service.id + ".njk" ignore missing %}
                </div>
                <div class="nav-dropdown-content">
                  <h4>{{ service.title }}</h4>
                  <p>{{ service.description | truncate(50) }}</p>
                </div>
              </a>
              {% endfor %}
            </div>
          </li>
          <li class="nav-item">
            <a href="/sobre/" class="nav-link">Sobre</a>
          </li>
          <li class="nav-item">
            <a href="/contato/" class="nav-link">Contato</a>
          </li>
        </ul>
        <a href="/contato/" class="btn btn-primary">
          Fale Conosco
          <svg class="btn-icon" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
            <line x1="5" y1="12" x2="19" y2="12"></line>
            <polyline points="12 5 19 12 12 19"></polyline>
          </svg>
        </a>
      </nav>

      <button class="menu-toggle" id="menu-toggle" aria-label="Menu">
        <span></span>
        <span></span>
        <span></span>
      </button>
    </div>
  </div>
</header>

<!-- Mobile Navigation -->
<nav class="mobile-nav" id="mobile-nav">
  <ul class="mobile-nav-list">
    <li class="mobile-nav-item">
      <a href="/" class="mobile-nav-link">Início</a>
    </li>
    {% for service in services %}
    <li class="mobile-nav-item">
      <a href="/{{ service.link }}" class="mobile-nav-link">{{ service.title }}</a>
    </li>
    {% endfor %}
    <li class="mobile-nav-item">
      <a href="/sobre/" class="mobile-nav-link">Sobre</a>
    </li>
    <li class="mobile-nav-item">
      <a href="/contato/" class="mobile-nav-link text-gradient">Contato</a>
    </li>
  </ul>
</nav>
